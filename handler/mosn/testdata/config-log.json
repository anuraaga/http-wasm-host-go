{
  "servers": [
    {
      "routers": [
        {
          "router_config_name": "server_router",
          "virtual_hosts": [
            {
              "name": "serverHost",
              "domains": [
                "*"
              ],
              "routers": [
                {
                  "direct_response": {
                    "status": 200,
                    "body": "{\"hello\": \"world\"}"
                  }
                }
              ]
            }
          ]
        }
      ],
      "listeners": [
        {
          "name": "serverListener",
          "address": "127.0.0.1:2046",
          "bind_port": true,
          "filter_chains": [
            {
              "filters": [
                {
                  "type": "proxy",
                  "config": {
                    "downstream_protocol": "Http1",
                    "upstream_protocol": "Http1",
                    "router_config_name": "server_router"
                  }
                }
              ]
            }
          ],
          "stream_filters": [
            {
              "type": "httpwasm",
              "config": {
                "path": "../../internal/test/testdata/log.wasm"
              }
            }
          ]
        }
      ]
    }
  ],
  "admin": {
    "address": {
      "socket_address": {
        "address": "0.0.0.0",
        "port_value": 34901
      }
    }
  }
}
